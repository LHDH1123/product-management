extends ../../layouts/default.pug
include ../../mixins/box-head.pug

block main
  .container.my-3
    .row
      .col-12
        +box-head("Giỏ hàng")


    .row
      .col-12
        if(cartDetail.products.length > 0)
          table(class="table table-bordered" table-cart)
            thead
              tr
                th STT
                th Ảnh
                th Tên
                th Giá
                th Số lượng
                th Tổng tiền
                th Hành động
            tbody
              each item, index in cartDetail.products
                tr
                  td #{index + 1}
                  td
                    img(src=item.productInfo.thumbnail, alt=item.title width="80px")
                  td
                    a(href=`/products/detail/${item.productInfo.slug}`) #{item.productInfo.title}
                  td #{item.priceNew}$
                  td
                    input(
                      type="number"
                      name="quantity"
                      value=item.quantity
                      min="1"
                      product-id=item.product_id
                      style="width: 60px"
                    )
                  td #{item.totalPrice.toLocaleString()}$
                  td
                    a(
                      href=`/cart/delete/${item.product_id}`
                      class="btn btn-danger"
                    ) Xóa
          
          h3(class="text-right") Tổng đơn hàng: #{cartDetail.totalPrice.toLocaleString()}$
          
          div(class="text-right mt-3")
            a(href="/order" class="btn btn-success") Đặt hàng
        
        else
          p
            i Không có sản phẩm nào trong giỏ hàng.


  script(src="/js/cart.js") 